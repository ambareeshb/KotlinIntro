<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StylePledgeAmt">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StyleDaysToGo">
        <item name="android:fontFamily">@font/montserrat_thin</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:background">@color/pldge_money_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="StyleProjectBy">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/pldge_money_color</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:background">@color/title_color</item>
    </style>


</resources>
