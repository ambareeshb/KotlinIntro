<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/large_margin"
    android:padding="@dimen/large_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_min_height"
        android:background="@color/card_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/projectTitle"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/projectBy"
            style="@style/StyleProjectBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectTitle"
            />
        <TextView
            android:id="@+id/projectPledge"
            style="@style/StylePledgeAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectBy"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/projectDays"
            style="@style/StyleDaysToGo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_large"
            android:layout_alignParentBottom="true"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/gotoWebPage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_large"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send_white_24px"
            android:background="@color/pldge_money_color"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/small_margin"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>